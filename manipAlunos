
# Lista de alunos (nome, idade e matrícula)
alunos = [
    {"nome": "Carla Vitoria", "idade": 20, "matricula": 2314457},
    {"nome": "Marcos Lima", "idade": 22, "matricula": 2314587},
    {"nome": "Maria Silva", "idade": 20, "matricula": 2315547},
    {"nome": "João Lucas", "idade": 20, "matricula": 2311698}
]

# Funções lambda para manipulação da lista de alunos
# função para inserir um aluno
inserir_novo_aluno = lambda alunos, nome, matricula, idade: alunos + [{"nome": nome, "matricula": matricula, "idade": idade}]
# função para remover um aluno
def remover_aluno_por_matricula(alunos, matricula):
    for aluno in alunos:
        if aluno["matricula"] == matricula:
            alunos.remove(aluno)
            return True
    return False
# função para mostrar os alunos
exibir_lista_de_alunos = lambda alunos: "\n".join([f"{aluno['nome']} - Matrícula: {aluno['matricula']}, Idade: {aluno['idade']}" for aluno in alunos])


# Menu interativo
while True:
    print("\nMENU:")
    print("1 - Ver lista de alunos")
    print("2 - Adicionar aluno")
    print("3 - Remover aluno")
    print("Outro número - Sair")

    opcao = input("Escolha uma opção: ")

    if opcao == "1":
        print("\nLista de alunos:")
        print(exibir_lista_de_alunos(alunos))

    elif opcao == "2":
        nome = input("Nome: ")
        matricula = int(input("Matrícula: "))
        idade = int(input("Idade: "))
        alunos = inserir_novo_aluno(alunos, nome, matricula, idade)
        print("\nAluno cadastrado com sucesso")

    elif opcao == "3":
        try:
            matricula = int(input("Digite a matrícula do aluno a ser removido: "))
            if remover_aluno_por_matricula(alunos, matricula):
                print("\nAluno removido com sucesso!")
            else:
                print("\nMatrícula não encontrada!")
        except ValueError:
            print("\nErro: Digite um número válido!")

    else:
        print("Saindo do programa...")
        break
